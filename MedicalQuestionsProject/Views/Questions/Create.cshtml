@model MedicalQuestionsProject.ViewModels.QuestionViewModel

@{
    ViewBag.Title = "Create Question";
}
<div class="w3-container row gutters-sm" style="padding:128px 16px">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://img2.freepng.fr/20171209/32a/hospital-signs-5a2c23bd517e75.7493155115128421733338.jpg" alt="hopital" class="rounded-circle" width="150">
                    <div class="mt-3">
                        <h4 class="slogan">Let us know what your problem is</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-body">
                <form class="needs-validation" novalidate="novalidate" action="/questions/create" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <label for="txtQuestionName">Question</label>
                            <textarea class="form-control" id="txtQuestionName" placeholder="Enter question" name="QuestionName" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus"></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter question.
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label for="drpCategory">Category</label>
                            <select class="form-control" id="drpCategory" name="CategoryID" required="required">
                                <option value="">Please Select</option>
                                @foreach (var item in ViewBag.Categories)
                                {
                                    <option value="@item.CategoryID">@item.CategoryName</option>
                                }
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Category can't be empty
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Question</button>
                    @Html.ValidationSummary()
                </form>
            </div>
        </div>
    </div>
</div>
    <script>
        $(document).on("submit", ".needs-validation", validate);
        $(".needs-validation input").blur(validate);
        function validate(event) {
            if ($(".needs-validation")[0].checkValidity() == false) {
                event.preventDefault();
            }
            $(".needs-validation")[0].classList.add("was-validated");
        }

    </script>
